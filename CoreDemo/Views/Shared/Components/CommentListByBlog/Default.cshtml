@model IEnumerable<EntityLayer.Concrete.Comment>

<h4 class="text-right">نظرات</h4>
<div class="comment-top">
    @if (Model.Count() > 0)
    {
        @foreach (var item in Model)
        {

            <div class="media">
                <img src="/Web/images/t1.jpg" alt="" class="img-fluid" />
                <div dir="rtl" class="media-body text-right">
                    <h5 class="mt-0">@item.CommentUserName</h5>
                    <p>@item.CommentContent .</p>


                </div>
            </div>
        }


    }
    else
    {
        <p>در این صفحه نظری وارد نشده است. اولین نظر را شما پر کنید</p>

    }

    
</div>