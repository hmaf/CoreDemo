@model EntityLayer.Concrete.Writer
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<!--//Sweet Alert cdn-->
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<!--/Sweet Alert cdn-->

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">عضو نویسندگان شوید</h3>
        <div class="inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                <form asp-action="Index" method="post">

                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom01">نام نام خانوادگی</label>

                            <input asp-for="WriterName" type="text" class="form-control" id="validationDefault01" placeholder="" required="">
                            <span asp-validation-for="WriterName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom02">ایمیل</label>
                            <input asp-for="WriterMail" type="text" class="form-control" id="validationDefault02" placeholder="" required="">
                            <span asp-validation-for="WriterMail" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword1 mb-2">کلمه عبور</label>
                            <input asp-for="WriterPassword" type="password" class="form-control" placeholder="" required="">
                            <span asp-validation-for="WriterPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword2 mb-2">تکرار کلمه عبور</label>
                            <input type="password" class="form-control" name="RePassword" placeholder="" required="">
                        </div>

                    </div>
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom01">شهر</label>
                            <select class="form-control" name="CityName" asp-items="@ViewData["City"]as SelectList"></select>
                            <span></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom02">تصویر</label>
                            <input asp-for="WriterImageName" type="text" class="form-control" id="validationDefault02" placeholder="" required="">
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary submit mb-4">ثبت</button>
                    <p>
                        <a href="#" id="btn1">تمام قوانین سایت را خاندم و قبول می کنم</a>
                    </p>
                </form>

            </div>
        </div>
    </div>
    <br />

</section>


<script>
    $("#btn1").click(function () {
        swal("از روی ایمیل وارد شده پیام های مربوط به سایت بدون ارسال به بخش spam ارسال خاهند شد. در صورتی که نمی خواهید ایمیل ارسال شود می توانید در بخش تنظیمات تغییر دهید. همجنین ایمیل و کلمه عبور وارد کده به صورت رمز گذاری شده ذخیره خواهد شد");
    });
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}