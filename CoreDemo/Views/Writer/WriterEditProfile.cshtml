@model Writer
@{
    ViewData["Title"] = "WriterEditProfile";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title text-primary">ویرایش مشخصات کاربر</h4>

            <form class="forms-sample" method="post">
                <input type="hidden" asp-for="WriterId" />
                <div class="form-group">
                    <label for="exampleInputName1">نام نام خانوادگی</label>
                    <input type="text" class="form-control" id="exampleInputName1" asp-for="WriterName" placeholder="نام">
                    <span asp-validation-for="WriterName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">ادرس ایمیل</label>
                    <input type="email" class="form-control" asp-for="WriterMail" id="exampleInputEmail3" placeholder="ایمیل">
                    <span asp-validation-for="WriterMail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">کلمه عبور</label>
                    <input type="password" class="form-control" asp-for="WriterPassword" id="exampleInputPassword4" placeholder="کلمه عبور">
                    <span asp-validation-for="WriterPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>File upload</label>
                    <input type="file" name="img[]" class="file-upload-default">
                    <div class="input-group col-xs-12">
                        <input type="text" class="form-control file-upload-info" disabled="" placeholder="Upload Image">
                        <span class="input-group-append">
                            <button class="file-upload-browse btn btn-gradient-primary" type="button">بارگزاری</button>
                        </span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">توضیحاتی درباره نویسنده</label>
                    <textarea class="form-control" asp-for="WriterAbout" id="exampleTextarea1" rows="4"></textarea>
                    <span asp-validation-for="WriterAbout" class="text-danger"></span>
                </div>
                <a class="btn btn-light" style="margin-right: 690px !important;" asp-controller="Dashboard" asp-action="Index">لغو</a>
                <button type="submit" class="btn btn-gradient-primary mr-2">ویرایش</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}